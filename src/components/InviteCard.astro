---
const { id, nom, role, imgUrl } = Astro.props;
---

<a href={`/invite/${id}`} class="block bg-[#312345] p-4 rounded-lg shadow-lg hover:scale-105 transition-transform text-white">
    
    <img src={imgUrl} alt={`Photo de ${nom}`} class="w-full h-48 object-cover rounded-lg" />
    
    <h2 class="text-xl font-semibold mt-3">{nom}</h2>
    <p class="text-gray-300">{role}</p>
</a>
