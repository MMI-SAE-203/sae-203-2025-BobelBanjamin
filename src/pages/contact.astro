---
import Layout from "../layouts/Layout.astro";
import titre from "../assets/img/contact.webp";
import { Image } from 'astro:assets';

---

<Layout>

    <section class="relative bg-[#0A1A4B] text-white py-20 px-6">
        <!-- Arrière-plan avec points -->
        <div class="absolute inset-0 bg-dot-pattern opacity-30"></div>

        <div class="absolute inset-0">
            <div class="absolute top-10 left-10 w-32 h-32 bg-white opacity-30 blur-3xl rounded-full"></div>
            <div class="absolute top-1/2 left-1/3 w-24 h-24 bg-pink-500 opacity-50 blur-3xl rounded-full"></div>
            <div class="absolute bottom-10 right-10 w-40 h-40 bg-yellow-400 opacity-20 blur-3xl rounded-full"></div>
        </div>
    
        <!-- Contenu principal -->
        <div class="relative text-center">
            <!-- Logo -->
            <Image src={titre} alt="titre" class="mx-auto mb-30" style="max-width"></Image>        
        
        <section class=" flex flex-col items-center justify-center px-6">
           
            <!-- ✅ Formulaire de contact -->
            <form class="w-full max-w-sm flex flex-col gap-4">
            <input type="text" placeholder="Nom" class="w-full p-3 rounded-lg bg-white text-black outline-none" required />
            <input type="text" placeholder="Prénom" class="w-full p-3 rounded-lg bg-white text-black outline-none" required />
            <input type="email" placeholder="Email" class="w-full p-3 rounded-lg bg-white text-black outline-none" required />
            <textarea placeholder="Message" class="w-full p-3 h-40 rounded-lg bg-white text-black outline-none" required></textarea>

            <!-- ✅ Bouton "Voir Plus" -->
            <button class="w-full mt-4 py-3 text-lg font-bold rounded-lg text-white bg-gradient-to-r from-[#ff4e78] to-[#306ef9] hover:opacity-80">
                Voir Plus
            </button>
            </form>
        </section>
    </section>
</Layout>
