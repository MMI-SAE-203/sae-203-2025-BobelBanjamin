---
import { getFilm } from "../../../backend.mjs";
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
const film = await getFilm(id);
---

<Layout>
<section class="max-w-6xl mx-auto p-6 bg-[#312345] rounded-lg shadow-lg text-white">
    <h1 class="text-3xl font-bold text-center mb-6">{film.titre_film}</h1>

    <!-- âœ… Section principale en grille : Affiche Ã  gauche / Infos + BA Ã  droite -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        <!-- ðŸ“¸ Affiche du Film (Gauche) -->
        <div class="flex flex-col items-center md:items-start">
            <img class="w-full max-w-xs md:max-w-sm rounded-lg shadow-md" 
                 src={film.imgUrl} 
                 alt={`Affiche de ${film.titre_film}`} />
            
            <div class="mt-6 text-left space-y-2">
                <p class="text-gray-300"><strong>ðŸ“… Sortie :</strong> {film.sortie}</p>
                <p class="text-gray-300"><strong>ðŸŽ­ Genres :</strong> {film.genre?.join(", ")}</p>
                <p class="text-gray-300"><strong>ðŸŽ¬ RÃ©alisateur :</strong> {film.realisateur}</p>
                <p class="text-gray-300"><strong>ðŸ•’ DurÃ©e :</strong> {film.duree} min</p>
                <p class="text-gray-300"><strong>ðŸŽ­ Acteurs :</strong> {film.acteurs}</p>
            </div>
        </div>

        <!-- ðŸŽ¬ Bande-Annonce YouTube (Droite) -->
        {film.ba && (
            <div class="relative w-full h-0 pb-[56.25%]">
                <iframe 
                    class="absolute top-0 left-0 w-full h-full rounded-lg"
                    src={film.ba.replace("watch?v=", "embed/")}
                    title={`Bande-annonce de ${film.titre_film}`}
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                ></iframe>
            </div>
        )}
    </div>

    <!-- ðŸ“ Synopsis du film -->
    <section class="mt-8">
        <h2 class="text-xl font-semibold">Synopsis</h2>
        <p class="text-gray-300 mt-2">{film.synopsis}</p>
    </section>
</section>
</Layout>
